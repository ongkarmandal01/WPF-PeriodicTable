<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryBackground">#121212</Color>
    <Color x:Key="PrimaryForeground">White</Color>
    <Color x:Key="MessageBackground">#212121</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource PrimaryBackground}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource PrimaryForeground}"/>
    <SolidColorBrush x:Key="MessageBackgroundBrush" Color="{StaticResource MessageBackground}"/>

    <BitmapImage x:Key="UiModeImageIcon" UriSource="/Images/light_mode.png" />
    <BitmapImage x:Key="CloseIcon" UriSource="/Images/close_dark.png" />
    <BitmapImage x:Key="MinimizeIcon" UriSource="/Images/close_fullscreen_dark.png" />
    <BitmapImage x:Key="FullscreenIcon" UriSource="/Images/fullscreen_dark.png" />
</ResourceDictionary>
