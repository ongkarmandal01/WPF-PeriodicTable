<Window x:Class="PeriodicTable.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="MessageDialog" Height="200" Width="500" Background="Transparent">

    <!-- Apply background color here instead of Grid -->
    <Border BorderBrush="Black" BorderThickness=".2" CornerRadius="20" Background="{DynamicResource MessageBackgroundBrush}" MouseDown="TitleBar_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="56"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Close Button -->
        <Button Background="Transparent" BorderBrush="{DynamicResource MessageBackgroundBrush}" Click="CloseHandler" Grid.Row="0" VerticalAlignment="Center" 
                    HorizontalAlignment="Right" Margin="0,8,20,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="HoverOverlay"
            Background="Crimson"
            Opacity="0"
            CornerRadius="5"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverOverlay" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Image Source="{DynamicResource CloseIcon}" Height="24" Width="24" Cursor="Hand" />
        </Button>

        <!-- Summary Label -->
        <Label Grid.Row="1" FontFamily="/Fonts/#Roboto" Content="Summary" Foreground="{DynamicResource ForegroundBrush}" FontSize="32" FontWeight="Medium"  
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>

        <!-- TextBlock -->
            <TextBlock x:Name="MessageText" Grid.Row="2" Text="" FontSize="16"  FontWeight="Regular"
                     VerticalAlignment="Top" HorizontalAlignment="Left" 
                     Margin="20,10,20,0" Width="360" TextWrapping="Wrap"/>
    </Grid>
    </Border>

</Window>
