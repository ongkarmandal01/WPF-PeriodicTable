            <Setter Property="Background" Value="#4e8752"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="/Fonts/#Roboto"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource PrimaryForeground}" Opacity="0.3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Hover Effect Overlay -->
                            <Border x:Name="HoverOverlay" 
                                    Background="Transparent" 
                                    CornerRadius="20"/>
                            
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="20" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect (Semi-transparent white overlay) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverOverlay" Property="Background" Value="#FFFFFF10"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            
                            <!-- Pressed Effect (Darker Shade) -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3a6f42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </StackPanel.Resources>


