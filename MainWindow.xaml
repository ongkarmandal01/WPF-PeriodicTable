<Window x:Class="PeriodicTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Periodic Table" Height="800" Width="1200">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <!-- Define two rows: one for the table, one for the buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <!-- Table Grid (Expands) -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons (Only needed height) -->
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{DynamicResource BackgroundBrush}" MouseDown="TitleBar_MouseDown" Margin="0,10,5,0">
            <StackPanel Height="24" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Width" Value="60"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border x:Name="HoverOverlay"
                                                Background="{DynamicResource ForegroundBrush}"
                                                Opacity="0"
                                                CornerRadius="5"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="HoverOverlay" Property="Opacity" Value="0.2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
                <Button Click="Minimize_Click" Width="60" >
                    <Image Height="24" Width="24" Source="{DynamicResource MinimizeIcon}"/>
                    </Button>
                <Button Click="Maximize_Click" Width="60">
                    <Image Height="24" Width="24" Source="{DynamicResource FullscreenIcon}"/>
                    </Button>
                <Button Click="Close_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="HoverOverlay"
                                Background="Crimson"
                                Opacity="0"
                                CornerRadius="5"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverOverlay" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                        </Button.Template>
                    <Image Height="24" Width="24" Source="{DynamicResource CloseIcon}"/>
                    </Button>
                </StackPanel>
        </Border>


        <Button x:Name="UiButton" 
        BorderBrush="{DynamicResource BackgroundBrush}" 
        Background="Transparent"
        Click="UiModeHandler"
        Grid.Row="1"
        VerticalAlignment="Center"
        HorizontalAlignment="Right"
        Height="48"
        Width="48"
        Margin="0,0,20,0"
        OverridesDefaultStyle="True">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border x:Name="HoverOverlay"
                Background="{DynamicResource ForegroundBrush}"
                Opacity="0"
                CornerRadius="5"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HoverOverlay" Property="Opacity" Value="0.2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <Image x:Name="UiButtonImage" Source="{DynamicResource UiModeImageIcon}"/>
        </Button>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label FontFamily="/Fonts/#Roboto" FontWeight="Bold" Content="Periodic Table" Foreground="{DynamicResource ForegroundBrush}" FontSize="32" />
        </StackPanel>
    <Grid Name="ElementGrid" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
